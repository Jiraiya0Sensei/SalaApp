@page "/"
@model SalaApp.Pages.Programari.IndexModel

@{
    ViewData["Programari"] = "Programari";
}

<h1>Programari</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ClientSort">
                    @Html.DisplayNameFor(model => model.Programare[0].Client.NumeClient)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.AntrenorSort">
                    @Html.DisplayNameFor(model => model.Programare[0].Antrenor.Nume)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Ora_inceput)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Ora_sfarsit)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Programare) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.NumeClient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Antrenor.Nume)
                </td>
                
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ora_inceput)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ora_sfarsit)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
