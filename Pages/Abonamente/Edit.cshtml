@page
@model SalaApp.Pages.Abonamente.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Abonament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Abonament.ID" />
            <div class="form-group">
                <label asp-for="Abonament.ClientID" class="control-label">Nume Client</label>
                <select asp-for="Abonament.ClientID" class="form-control" asp-items="ViewBag.ClientID">
                </select>
                <span asp-validation-for="Abonament.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abonament.SportID" class="control-label">Denumire Sport</label>
                <select asp-for="Abonament.SportID" class="form-control" asp-items="ViewBag.SportID">
                </select>
                <span asp-validation-for="Abonament.SportID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abonament.Data_inceput" class="control-label"></label>
                <input asp-for="Abonament.Data_inceput" class="form-control" />
                <span asp-validation-for="Abonament.Data_inceput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abonament.Data_expirare" class="control-label"></label>
                <input asp-for="Abonament.Data_expirare" class="form-control" />
                <span asp-validation-for="Abonament.Data_expirare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abonament.Pret" class="control-label"></label>
                <input asp-for="Abonament.Pret" class="form-control" />
                <span asp-validation-for="Abonament.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
